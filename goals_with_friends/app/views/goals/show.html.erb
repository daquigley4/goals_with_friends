<div class="page-header">
  <%= link_to user_goals_path(current_user), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_user_goal_path(current_user, @goal), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show goal</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @goal.title %></dd>

  <dt>Due date:</dt>
  <dd><%= @goal.due_date %></dd>

  <dt>Completed:</dt>
  <dd><%= @goal.completed %></dd>

  <dt>Created:</dt>
  <dd><%= @goal.created_at %></dd>

</dl>
<!-- (goal: @goal.id) -->
<h3>Tasks <%= link_to "(+)", new_user_goal_task_path(current_user, @goal) %></h3>

<ol>
  <% @goal.tasks.each do |task| %>
    <li>
      <%= link_to "#{task.title} - #{task.description}",user_goal_task_path(current_user, @goal, task) %>
      </a>
    </li>
  <% end %>
</ol>
